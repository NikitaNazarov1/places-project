<% content_for :nav do %>
  <%= link_to 'Main page'.html_safe, '/',
                                     class: 'form-control btn btn-outline-secondary my-2 my-sm-0 mr-2 ml-2' %>
<% end %>

<% content_for :main do %>
<div class="container col-md-6">
  <h1>Sign Up</h1>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
      <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
      </p>
      <p>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </p>
      <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </p>
      <p>
        <%= f.submit 'Sign Up', class: "btn btn-outline-success" %>
      </p>
    <% end %>
    <p>Already have an account? <%= link_to "Sign in!", login_path %></p>
</div>
<% end %>
