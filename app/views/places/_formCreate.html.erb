<%= form_with model: @place, id: 'placeCreate' do |f| %>
    <p>
      <%= f.text_field :title, value: '',
                               size: 30,
                               maxlength: 50,
                               required: true,
                               autofocus: true,
                               placeholder: 'Title',
                               style: 'font-size: 14px;' %>
    </p>
    <p>
      <%= f.text_area :description, value: '',
                                    size: '30x8',
                                    maxlength: 300,
                                    required: true,
                                    placeholder: 'Description',
                                    style: 'font-size: 14px;' %>
    </p>
    <p>
      <%= f.submit 'Create', class: 'btn btn-outline-success p-1 m-1' %>
    </p>
    <%= hidden_field_tag(:coordinates) %>
<% end %>
