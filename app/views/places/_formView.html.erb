<%= form_with model: @place, id: 'placeView' do |f| %>
  <div id="place_id" onclick="updatePlace()">
  <h2 id="title" class="title"> <%= f.label :title %> </h2>
  <p><b><h6 id="description" class="description"> <%= f.label :description %> </h6></b></p>
  <tr><td> <input type="button" class="btn btn-outline-success p-1 m-1" id="btn-upd" value="Update"> </td> </tr>
  <tr><td> <input type="button" class="btn btn-outline-danger p-1 m-1" id="btn-del" value="Delete" onclick = "deletePlace()"> </td></tr>
  <%= hidden_field_tag(:coordinates) %>
<% end %>
